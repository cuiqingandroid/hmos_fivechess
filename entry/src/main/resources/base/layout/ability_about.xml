<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$color:yellow"
    ohos:left_padding="20vp"
    ohos:right_padding="20vp"
    ohos:orientation="vertical">

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="15vp"
        ohos:text="$string:app_name"
        ohos:text_color="$color:black"
        ohos:text_size="20fp"/>


    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:orientation="horizontal">
        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:version_prefix"
            ohos:text_color="$color:black"
            ohos:text_size="20fp"/>
        <Text
            ohos:id="$+id:version"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_color="$color:black"
            ohos:text_size="20fp"/>
    </DirectionalLayout>

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:text="$string:organization"
        ohos:text_color="$color:black"
        ohos:text_size="20fp"/>
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:text="$string:author"
        ohos:text_color="$color:black"
        ohos:text_size="20fp"/>

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:text="$string:project_prefix"
        ohos:text_color="$color:black"
        ohos:text_size="20fp"/>
    <Text
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:multiple_lines="true"
        ohos:text="$string:project_url"
        ohos:text_color="$color:black"
        ohos:top_margin="3vp"
        ohos:text_size="16fp"/>

    <Button
        ohos:id="$+id:back"
        ohos:width="150vp"
        ohos:height="match_content"
        ohos:top_margin="50vp"
        ohos:bottom_padding="5vp"
        ohos:background_element="$graphic:btn_blue"
        ohos:layout_alignment="horizontal_center"
        ohos:top_padding="5vp"
        ohos:left_padding="20vp"
        ohos:text="$string:back"
        ohos:text_size="20fp"
        ohos:text_color="$color:white"
        ohos:right_padding="20vp"/>
</DirectionalLayout>